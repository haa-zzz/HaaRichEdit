<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:background="#F0F0F0"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/cm_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_weight="1"
        android:contentDescription="@string/image"
        android:padding="@dimen/dp_4"
        android:src="@drawable/picture_icon" />

    <ImageView
        android:id="@+id/cm_attachment"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_weight="1"
        android:contentDescription="@string/attachment"

        android:padding="@dimen/dp_4"
        android:src="@drawable/attachment2" />

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="#BFBEBE" />

    <ImageView
        android:id="@+id/cm_fontSize"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_weight="1"
        android:contentDescription="@string/font"
        android:padding="@dimen/dp_4"
        android:src="@drawable/font_size" />

    <ImageView
        android:id="@+id/cm_font"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_weight="1"
        android:contentDescription="@string/font"
        android:padding="@dimen/dp_4"
        android:src="@drawable/text" />

    <ImageView
        android:id="@+id/cm_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_weight="1"
        android:contentDescription="@string/font"
        android:padding="@dimen/dp_4"
        android:src="@drawable/fontcolor" />
    <ImageView
        android:id="@+id/cm_gc"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_weight="1"
        android:contentDescription="@string/font"
        android:padding="@dimen/dp_4"
        android:src="@drawable/gc" />

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="#BFBEBE" />
    <ImageView
        android:id="@+id/cm_other"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_weight="1"
        android:contentDescription="@string/font"
        android:padding="@dimen/dp_4"
        android:src="@drawable/other" />
</LinearLayout>


