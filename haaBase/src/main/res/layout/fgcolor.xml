<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:id="@+id/fg_main"
        android:visibility="gone"
        android:padding="0dp">

        <ImageView
            android:id="@+id/fg_red"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/image"
            android:src="@drawable/fg_red" />
        <ImageView
            android:id="@+id/fg_yellow"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:contentDescription="@string/image"
            android:src="@drawable/fg_yellow" />
        <ImageView
            android:id="@+id/fg_green"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:contentDescription="@string/image"
            android:src="@drawable/fg_green" />
        <ImageView
            android:id="@+id/fg_blue"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:contentDescription="@string/image"
            android:src="@drawable/fg_blue" />
        <ImageView
            android:id="@+id/fg_deepBlue"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:contentDescription="@string/image"
            android:src="@drawable/fg_dblue" />
        <ImageView
            android:id="@+id/fg_black"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:contentDescription="@string/image"
            android:src="@drawable/fontcolor" />
    </LinearLayout>

</androidx.cardview.widget.CardView>